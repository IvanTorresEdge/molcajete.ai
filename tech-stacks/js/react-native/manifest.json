{
  "name": "react-native",
  "version": "1.1.0",
  "extends": "js/common",
  "description": "React Native mobile development with Expo, NativeWind, and modern mobile tooling",
  "author": {
    "name": "Molcajete.ai",
    "email": "ivantorresedge@gmail.com"
  },
  "frameworks": [
    "React Native 0.76+",
    "Expo SDK 52+",
    "Expo Router",
    "NativeWind",
    "Gluestack-ui"
  ],
  "commands": [
    {"name": "expo-init", "description": "Initialize Expo project"},
    {"name": "preview", "description": "Preview with Expo Go"},
    {"name": "test-component", "description": "Test React Native components"},
    {"name": "test-e2e", "description": "Run Maestro E2E tests"},
    {"name": "build-ios", "description": "Build iOS app with EAS"},
    {"name": "build-android", "description": "Build Android app"},
    {"name": "build-all", "description": "Build both platforms"},
    {"name": "deploy-eas", "description": "Deploy to EAS"},
    {"name": "analyze", "description": "Analyze bundle size"},
    {"name": "update-ota", "description": "Push OTA update"},
    {"name": "refactor-atomic-design", "description": "Refactor existing project to Atomic Design structure"}
  ],
  "agents": [
    {
      "name": "component-builder",
      "description": "React Native component development",
      "capabilities": ["mobile-component-development", "react-native-apis", "platform-specific-code", "custom-hooks"]
    },
    {
      "name": "ui-designer",
      "description": "UI with NativeWind and Gluestack-ui",
      "capabilities": ["nativewind-styling", "gluestack-ui-components", "mobile-accessibility", "responsive-mobile-design"]
    },
    {
      "name": "navigation-architect",
      "description": "Expo Router navigation",
      "capabilities": ["expo-router-patterns", "deep-linking", "route-guards", "navigation-state"]
    },
    {
      "name": "performance-optimizer",
      "description": "React Native performance optimization",
      "capabilities": ["bundle-optimization", "flashlist-implementation", "animation-performance", "memory-management"]
    },
    {
      "name": "e2e-tester",
      "description": "Maestro E2E testing",
      "capabilities": ["maestro-testing", "mobile-gestures", "platform-specific-testing", "visual-regression"]
    },
    {
      "name": "code-analyzer",
      "description": "Component structure analysis for Atomic Design refactoring",
      "capabilities": ["component-scanning", "import-analysis", "atomic-classification", "refactoring-plans", "accessibility-detection"]
    }
  ],
  "skills": [
    {"name": "nativewind-patterns", "description": "Tailwind CSS for React Native"},
    {"name": "gluestack-ui-setup", "description": "Component library setup"},
    {"name": "expo-router-patterns", "description": "File-based navigation"},
    {"name": "expo-configuration", "description": "Expo config and plugins"},
    {"name": "react-native-performance", "description": "Mobile optimization"},
    {"name": "flashlist-patterns", "description": "High performance lists"},
    {"name": "reanimated-patterns", "description": "Smooth animations"},
    {"name": "zustand-mobile-patterns", "description": "Client state for mobile"},
    {"name": "tanstack-query-mobile", "description": "Server state and caching"},
    {"name": "form-handling-mobile", "description": "Forms with validation"},
    {"name": "secure-storage-patterns", "description": "Secure token storage"},
    {"name": "platform-specific-code", "description": "iOS/Android differences"},
    {"name": "maestro-testing", "description": "E2E testing setup"},
    {"name": "component-testing-mobile", "description": "Jest patterns"},
    {"name": "accessibility-mobile", "description": "Accessibility testing"},
    {"name": "eas-build-setup", "description": "EAS Build configuration"},
    {"name": "eas-update-setup", "description": "OTA updates"}
  ],
  "requirements": {
    "core": [
      "All js/common requirements",
      "React Native >= 0.76",
      "Expo SDK >= 52"
    ],
    "recommended": [
      "Expo Router >= 4.0",
      "NativeWind >= 4.0",
      "Gluestack-ui >= 2.0",
      "@tanstack/react-query >= 5.0",
      "Zustand >= 5.0"
    ],
    "optional": [
      "Maestro - E2E testing",
      "React Native Storybook - Component documentation"
    ]
  },
  "supportedDeploymentTargets": [
    "EAS Build",
    "App Store (iOS)",
    "Google Play Store",
    "TestFlight",
    "Firebase App Distribution"
  ]
}
